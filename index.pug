doctype html
html(lang="en")

    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content="This is a word counting app.")
        meta(name="author" content="Aman Kumar")

        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
        
        link(rel="stylesheet" type="text/css" href="style/style.css")
        link(rel="icon" href="img/icon.png" type="image/x-icon")
        title WORD COUNTING APP
    
    body
        .border.z-depth-5
            .container_wc
                h1 WORD COUNTING APP
                .row(style="margin-bottom: 0px;")
                    .input-field.col.s12
                        textarea#txt-area.materialize-textarea
                        label(for="textarea1").label Let's Go
                
                .output
                    .row.z-depth-2(style="margin-right: 1.5%")
                        div Total Words: 
                            span#wordCount 0
                
                    .row.z-depth-2
                        div Total Characters: 
                            span#characterCount 0
                
                a.waves-effect.waves-light.waves-blue.btn.right Reset

        script(src="code.js")
